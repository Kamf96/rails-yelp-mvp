<h1>List of restaurants:</h1>

<table>
  <tr>
    <th>Names</th>
  </tr>
  <% @restaurants.each do |restaurant| %>
  <tr>
    <td><%= link_to restaurant.name, restaurant_path(restaurant)  %></td>
  </tr>
  <% end %>
</table>
<br>
<%= link_to 'Add a new restaurant', new_restaurant_path, class: "btn btn-primary" %>
